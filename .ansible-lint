---
profile: production
exclude_paths:
  - ../
  - .cache/
  - .venv/
  - custom/
strict: true
quiet: false
verbosity: 1
parseable: true
offline: true
var_naming_pattern: "^ci_[a-z_][a-z0-9_]*$"
enable_list:
  - fqcn-builtins
  - fqcn[action]
  - fqcn[action-core]
  - fqcn[canonical]
  - fqcn[deep]
  - jinja[invalid]
  - no-tabs
  - no-prompting
  - no-relative-paths
  - no-log-password
  - no-same-owner
  - name[play]
skip_list:
  - risky-file-permissions  # Seems to fail on 0644 on files ?!
  - schema[meta]  # Apparently "CentOS 9" isn't known... ?!
  - galaxy[no-changelog]
