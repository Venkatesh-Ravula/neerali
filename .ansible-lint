---
profile: production
exclude_paths:
  - ../
  - .cache/
  - .venv/
  - custom/
  - _pages
  - _config.yml
strict: true
quiet: false
verbosity: 1
parseable: true
offline: true
enable_list:
  - fqcn-builtins
  - fqcn[action]
  - fqcn[action-core]
  - fqcn[canonical]
  - fqcn[deep]
  - jinja[invalid]
  - no-tabs
  - no-prompting
  - no-relative-paths
  - no-log-password
  - no-same-owner
  - name[play]
skip_list:
  - risky-file-permissions
  - schema[meta]
  - galaxy[no-changelog]
  - jinja[spacing]
  - var-naming[no-role-prefix]
